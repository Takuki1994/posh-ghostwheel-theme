{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh3/main/themes/schema.json",
    "blocks": [
        {
            "type": "prompt",
            "alignment": "left",
            "horizontal_offset": 1,
            "segments": [
                {
                    "type": "path",
                    "style": "plain",
                    "foreground": "#26C6DA",
                    "properties": {
                        "style": "agnoster_short",
                        "folder_separator_icon": "<#546E7A>/</>",
                        "folder_icon": "<#546E7A>…</>"
                    }
                },
                {
                    "type": "git",
                    "style": "plain",
                    "foreground": "#696969",
                    "properties": {
                        "color_background": false,
                        "prefix": "<#546E7A>›</> ",
                        "branch_icon": "<#ff6347>git</> ",
                        "branch_ahead_icon":"⏫",
                        "branch_behind_icon": "⏬",
                        "display_stash_count": true,
                        "status_colors_enabled": true,
                        "local_working_icon": " +",
                        "local_staged_icon": " ✅",
                        "stash_count_icon": " Ｓ ",
                        "working_color": "#ffff00",
                        "staging_color": "#3cb371",
                        "local_changes_color": "#ffff00",
                        "behind_color": "#9400d3",
                        "ahead_color": "#1e90ff",
                        "ahead_and_behind_color": "#ff0000"
                    }
                }
            ]
        },
        {
            "type": "prompt",
            "alignment": "right",
            "segments": [
                {
                    "type": "exit",
                    "style": "plain",
                    "foreground": "#00ff00",
                    "properties": {
                        "display_exit_code": true,
                        "always_enabled": true,
                        "error_color": "#e91e63",
                        "success_icon":"✅",
                        "error_icon":"❌",
                        "postfix": " <#546E7A> ‹</>"
                    }
                },
                {
                    "type": "python",
                    "style": "plain",
                    "foreground": "#ffff00",
                    "properties": {
                        "postfix": "<#546E7A> ‹</>",
                        "prefix": " <#0068b7>Python</> ",
                        "display_mode": "context"
                    }
                },
                {
                    "type": "os",
                    "style": "plain",
                    "foreground": "#00bfff",
                    "properties": {
                        "windows": "Win",
                        "ubuntu": "Ubuntu"
                    }
                }
            ]
        },
        {
            "type": "newline"
        },
        {
            "type": "prompt",
            "alignment": "left",
            "segments": [
                {
                    "type": "text",
                    "style": "plain",
                    "foreground": "#c0c0c0",
                    "properties": {
                        "text": "》"
                    }
                }
            ]
        }
    ]
}
